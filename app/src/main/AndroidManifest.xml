<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cs315.studentlist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".TannerActivity"
            android:label="@string/title_tanner_detail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/TannerCustomTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".KerskerActivity"
            android:label="JFK"
            android:parentActivityName=".MainActivity"
            android:theme="@style/KerskerTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".JadesActivity"
            android:label="@string/title_jade"
            android:parentActivityName=".MainActivity"
            android:theme="@style/JadeCustomTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
         </activity>
         <activity
            android:name=".BerggrenActivity"
            android:label="@string/my_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/BerggrenCustomTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".AlbrechtActivity"
            android:theme="@style/AlbrechtCustomTheme"
            android:label="@string/title_albrecht_detail"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>

</manifest>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/KelOrange</item>
        <item name="colorPrimaryDark">@color/KelOrange</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TannerCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customBlue</item>
        <item name="colorPrimaryDark">@color/customBlueDark</item>
        <item name="colorAccent">@color/customRed</item>
    </style>

    <style name="CrawfordCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customYellow</item>
        <item name="colorPrimaryDark">@color/customBlueDark</item>
        <item name="colorAccent">@color/customRed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
